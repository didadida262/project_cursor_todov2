{
  "version": 2,
  "buildCommand": "cd frontend && yarn install && yarn build",
  "outputDirectory": "frontend/build",
  "functions": {
    "api/todos.py": {
      "runtime": "python3.9"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/todos"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "env": {
    "REACT_APP_API_URL": "/api"
  },
  "builds": [
    {
      "src": "api/todos.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.9"
      }
    }
  ]
}
